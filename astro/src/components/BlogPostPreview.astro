---
import { getSanityImageUrl, formatBlogPostDate } from '../utils/helpers.js'

export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<head>    
 <link
        rel="stylesheet"
        href={Astro.resolve("../assets/style/global.css")}
    >
    </head>
<article class=" ">


<div class=" max-w-lg mx-3 h-full grid gap-5  ">
      <div class="flex flex-col my-5 rounded-lg shadow-lg overflow-hidden">
        <div class="flex-shrink-0">
          {post.mainImage && <img  class="h-48 w-full object-none" loading="lazy" src={getSanityImageUrl(post.mainImage).url()} />}
        </div>
        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-indigo-600">
            
            </p>
            <a href={`/blog/${post.slug.current}`} class="block mt-2">
              <p class="text-xl font-semibold text-gray-900">
                {post.title}
              </p>
              <p class="mt-3 text-base text-gray-500">
                {post.excerpt}
              </p>
            </a>
          </div>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <a href={`/blog/${post.slug.current}`}>
                <span class="sr-only">Roel Aufderehar</span>
                <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
              </a>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">
                <a href={`/blog/${post.slug.current}`} class="hover:underline">
                  {post.author.name}
                </a>
              </p>
              <div class="flex space-x-1 text-sm text-gray-500">
                <time datetime="2020-03-16">
                  {formatBlogPostDate(post.publishedAt)
                </time>
                <span aria-hidden="true">
                  &middot;
                </span>
              
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>


</article>



